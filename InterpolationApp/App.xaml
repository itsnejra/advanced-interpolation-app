<Application x:Class="InterpolationApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:InterpolationApp.ViewModels"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- ELEGANT LIGHT THEME -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                            PrimaryColor="Indigo" 
                                            SecondaryColor="Teal" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- CONVERTERS -->
            <vm:TimeSpanToMillisecondsConverter x:Key="TimeSpanToMillisecondsConverter"/>
            <vm:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <vm:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <vm:FlexibleDoubleConverter x:Key="FlexibleDoubleConverter"/>

            <!-- ELEGANT CUSTOM STYLES -->
            
            <!-- Card Style - Clean & Elevated -->
            <Style x:Key="ElegantCard" TargetType="materialDesign:Card">
                <Setter Property="Margin" Value="12"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="UniformCornerRadius" Value="8"/>
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2"/>
                <Setter Property="Background" Value="White"/>
            </Style>

            <!-- Section Header - Professional -->
            <Style x:Key="SectionHeader" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
                <Setter Property="Foreground" Value="#283593"/>
            </Style>

            <!-- Sub Header -->
            <Style x:Key="SubHeader" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Margin" Value="0,12,0,8"/>
                <Setter Property="Foreground" Value="#5C6BC0"/>
            </Style>

            <!-- Primary Button - Elegant -->
            <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                <Setter Property="Margin" Value="8,4"/>
                <Setter Property="Padding" Value="24,10"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="6"/>
            </Style>

            <!-- Secondary Button -->
            <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="Margin" Value="8,4"/>
                <Setter Property="Padding" Value="20,8"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="6"/>
            </Style>

            <!-- TextBox - Clean -->
            <Style x:Key="ElegantTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                <Setter Property="Margin" Value="8,4"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="materialDesign:TextFieldAssist.UnderlineBrush" Value="#5C6BC0"/>
            </Style>

            <!-- ComboBox - Clean -->
            <Style x:Key="ElegantComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
                <Setter Property="Margin" Value="8,4"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="12,10"/>
            </Style>

            <!-- Slider - Modern -->
            <Style x:Key="ElegantSlider" TargetType="Slider" BasedOn="{StaticResource MaterialDesignSlider}">
                <Setter Property="Margin" Value="8,4"/>
                <Setter Property="Foreground" Value="#5C6BC0"/>
            </Style>

            <!-- DataGrid - Clean -->
            <Style x:Key="ElegantDataGrid" TargetType="DataGrid">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="GridLinesVisibility" Value="None"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            </Style>

            <!-- Status Bar Colors -->
            <SolidColorBrush x:Key="StatusSuccessBrush" Color="#4CAF50"/>
            <SolidColorBrush x:Key="StatusErrorBrush" Color="#F44336"/>
            <SolidColorBrush x:Key="StatusInfoBrush" Color="#2196F3"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
